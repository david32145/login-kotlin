<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingHorizontal="10dp"
                      android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:text="Email: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteY="106dp"
                        tools:layout_editor_absoluteX="12dp"
                        android:id="@+id/tvEmail"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:layout_margin="0dp"
                        android:text=""
                        android:ems="10"
                        tools:layout_editor_absoluteY="127dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp" android:id="@+id/txtEmail"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Senha: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteY="106dp"
                        tools:layout_editor_absoluteX="12dp"
                        android:id="@+id/tvPass"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:text=""
                        android:layout_margin="0dp"
                        android:ems="10"
                        tools:layout_editor_absoluteY="127dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp" android:id="@+id/txtPass"/>
            </LinearLayout>

            <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:text="Login"
                    android:background="@drawable/button_shape"
                    android:textColor="@color/colorText"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:layout_height="match_parent"/>

        </LinearLayout>

</LinearLayout>